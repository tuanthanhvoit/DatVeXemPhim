@model QLBanVePhim.Models.Rap

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Xóa Rạp
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
    
                @using (Html.BeginForm("Delete", "Rap", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Tên Rạp</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.TenRap, new { @class = "form-control", placeholder = "Readonly", @readonly = "" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Địa Chỉ</label>
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.DiaChi, new { @class = "form-control", placeholder = "Readonly", @readonly = "" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <button type="button" class="btn default">Cancel</button>
                             @Html.ActionLink("Trở Về Trang Index", "Index", "Rap",null, new { @class="btn btn-info"})
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/scripts/custom/components-pickers.js"></script> 
    <script>
        jQuery(document).ready(function () {
            App.init(); // initlayout and core plugins
            ComponentsPickers.init();
        });
    </script>
}
