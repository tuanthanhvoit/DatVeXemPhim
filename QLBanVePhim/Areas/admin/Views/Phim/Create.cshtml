@model QLBanVePhim.Models.Phim

@{
    ViewBag.Title = "Create";
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Phim
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("Create", "Phim", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {

                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Dạng Phim</label>
                            <div class="col-md-4">
                                @Html.DropDownList("DangPhimId", (IEnumerable<SelectListItem>)ViewBag.DangPhimId, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Loại Phim</label>
                            <div class="col-md-4">
                                @Html.DropDownList("LoaiPhimId", (IEnumerable<SelectListItem>)ViewBag.LoaiPhimId, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Tên Phim</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(modelitem => modelitem.TenPhim, new { @class = "form-control" })
                            </div>
                        </div> 
                        <div class="form-group">
                            <label class="col-md-3 control-label">Ảnh Đại Diện Phim</label>
                            <div class="col-md-4">
                                <input type="file" name="myfile" />
                                @ViewData["kichthuoc"]
                                @ViewData["loaianh"]
                                @ViewData["hinh"]
                            </div>
                        </div> 
                        <div class="form-group">
                            <label class="col-md-3 control-label">Mô Tả</label>
                            <div class="col-md-4">
                                @Html.TextAreaFor(modelitem => modelitem.MoTaPhim, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Thời Lượng</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(modelitem => modelitem.ThoiLuong, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Link Trailer</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(modelitem => modelitem.LinkTrailer, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <button type="button" class="btn default">Cancel</button>
                             @Html.ActionLink("Trở Về Trang Index", "Index", "PhatHanhPhim", new { @class="btn btn-info"})
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/scripts/custom/components-pickers.js"></script> 
    <script>
        jQuery(document).ready(function () {
            App.init(); // initlayout and core plugins
            ComponentsPickers.init();
        });
    </script>
}

