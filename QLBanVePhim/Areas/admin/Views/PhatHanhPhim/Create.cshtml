@model QLBanVePhim.Models.PhatHanhPhim

@{
    ViewBag.Title = "Create";
}


<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Phát Hành Phim
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("Create", "PhatHanhPhim", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Danh Sách Rạp</label>
                            <div class="col-md-4">
                                @Html.DropDownList("TenRap", (IEnumerable<SelectListItem>)ViewBag.RapId, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Danh Sách Phim</label>
                            <div class="col-md-4">
                                @Html.DropDownList("TenPhim", (IEnumerable<SelectListItem>)ViewBag.PhimId, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group last">
                            <label class="control-label col-md-3">Date Range</label>
                            <div class="col-md-4">
                                <div class="input-group input-large date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
                                    
                                    @Html.TextBoxFor(modelitem => modelitem.NgayBatDau, new { @class = "form-control" })
                                    <span class="input-group-addon">to
                                    </span>
                                    @Html.TextBoxFor(modelitem => modelitem.NgayKetThuc, new { @class = "form-control" })
                                </div>
                                <!-- /input-group -->
                                <span class="help-block">Chọn ngày chiếu
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <button type="button" class="btn default">Cancel</button>
                             @Html.ActionLink("Trở Về Trang Index", "Index", "PhatHanhPhim", new { @class="btn btn-info"})
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/scripts/custom/components-pickers.js"></script> 
    <script>
        jQuery(document).ready(function () {
            App.init(); // initlayout and core plugins
            ComponentsPickers.init();
        });
    </script>
}
