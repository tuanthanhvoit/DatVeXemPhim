@model QLBanVePhim.Models.PhatHanhPhim

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Phát Hành Phim : @if (TempData["Error"] != null) { @TempData["Error"] }
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body form">
                @if (ViewBag.Error != null)
                {

                    <div class="form-body">
                        <div class="form-group">
                            @Html.ActionLink("Chưa có lịch chiếu vui lòng Click vào đây trở về trang Phát Hành Phim Thêm Lịch Chiếu", "Index", "PhatHanhPhim",null, new { @class = "btn red" })
                        </div>
                    </div>
                }else{
                
                
                <!-- BEGIN FORM-->
                using (Html.BeginForm("Create", "XuatChieu", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Phim</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Phim.TenPhim, new { @class = "form-control", placeholder = "Readonly", @readonly = "" })
                                <input type="hidden" name="minOfPhim" value="@Model.Phim.ThoiLuong" />
                                <input type="hidden" name="PhatHanhPhimid" value="@Model.PhatHanhPhimId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Rạp</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Rap.TenRap, new { @class = "form-control", placeholder = "Readonly", @readonly = "" })
                                <input type="hidden" name="RapId" value="@Model.RapId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Phòng</label>
                            <div class="col-md-4">
                                @Html.DropDownList("phong", (IEnumerable<SelectListItem>)ViewBag.Phong, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Xuất Chiếu</label>
								<div class="col-md-3">
									<div class="input-group">
										<input type="text" id="clockface_2" name="clockface" value="14:30" class="form-control" readonly=""/>
										<span class="input-group-btn">
											<button class="btn default" type="button" id="clockface_2_toggle"><i class="fa fa-clock-o"></i></button>
										</span>
									</div>
								</div>
                            
                        </div>
                        <div class="form-group last">
                            <label class="col-md-3 control-label">Ngày Chiếu</label>
                            <div class="col-md-4">
                                @Html.DropDownList("NgayChieu", (IEnumerable<SelectListItem>)ViewBag.Day, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <button type="button" class="btn default">Cancel</button>
                            @Html.ActionLink("Trở Về Trang Index", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                }
                <!-- END FORM-->
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/scripts/custom/components-pickers.js"></script> 
    <script>
        jQuery(document).ready(function () {
            App.init(); // initlayout and core plugins
            ComponentsPickers.init();
        });
    </script>
}
