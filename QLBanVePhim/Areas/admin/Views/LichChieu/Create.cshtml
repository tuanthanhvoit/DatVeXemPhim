@model QLBanVePhim.Models.PhatHanhPhim

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> Lịch Chiếu
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("Create", "LichChieu", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Phim</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Phim.TenPhim, new { @class = "form-control", placeholder = "Readonly", @readonly = "" })
                                <input type="hidden" name="PhatHanhPhimid" value="@Model.PhatHanhPhimId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Rạp</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Rap.TenRap, new { @class = "form-control", placeholder = "Readonly", @readonly = "" })
                                <input type="hidden" name="RapId" value="@Model.RapId" />
                            </div>
                        </div>
                        <div class="form-group">
							<label class="col-md-3 control-label">Ngày Chiếu</label>
							<div class="checkbox-list col-md-7">
                                    @{
                    for (int i = 1; i <= ViewBag.Day.Count; i++)
                    {
                                            <label class="checkbox-inline"><input type="checkbox" name="ChkNgay@{@ViewBag.Day[i - 1].Value}" value="@ViewBag.Day[i - 1].Value"> @ViewBag.Day[i - 1].Value </label>
                        if (i != 0 && i % 4 == 0)
                        {
                            if (i != ViewBag.Day.Count - 1)
                            {
                                                    @:</div><label class="col-md-3 control-label"></label><div class="checkbox-list col-md-7">
                                                }
                            else
                            {
                                                    @:</div>
                                                }
                        }
                        else
                        {
                            if (i == ViewBag.Day.Count)
                            { 
                                                    @:</div>
                                                }
                        }
                    }    
                                    }
                            </div>
						</div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">Submit</button>
                            <button type="button" class="btn default">Cancel</button>
                            @Html.ActionLink("Trở Về Trang Index", "Index", null, new { @class = "btn btn-info" })
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
    
    <div class="col-md-12">
        <div class="portlet box green">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> Lịch Chiếu
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-horizontal">
                    <div class="form-body">
                        
                        <div class="form-group">
							<label class="col-md-3 control-label">Ngày Chiếu</label>
							<div class="checkbox-list col-md-7">
                                    @{
                                        for (int i = 1; i <= ViewBag.DayDaChieu.Count; i++)
                                        {
                                                                <label class="checkbox-inline"><input type="checkbox" name="ChkNgay@{@ViewBag.DayDaChieu[i - 1].NgayChieu.ToString("dd/MM/yyyy")}" value="@ViewBag.DayDaChieu[i - 1].NgayChieu.ToString("dd/MM/yyyy")" disabled> @ViewBag.DayDaChieu[i - 1].NgayChieu.ToString("dd/MM/yyyy") </label>
                                            if (i != 0 && i % 4 == 0)
                                            {
                                                if (i != ViewBag.Day.Count - 1)
                                                {
                                                                        @:</div><label class="col-md-3 control-label"></label><div class="checkbox-list col-md-7">
                                                                    }
                                                else
                                                {
                                                                        @:</div>
                                                                    }
                                            }
                                            else
                                            {
                                                if (i == ViewBag.Day.Count)
                                                { 
                                                                        @:</div>
                                                                    }
                                            }
                                        }    
                                    }
                            </div>
						</div>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/assets/scripts/custom/components-pickers.js"></script> 
    <script>
        jQuery(document).ready(function () {
            App.init(); // initlayout and core plugins
            ComponentsPickers.init();
        });
    </script>
}
